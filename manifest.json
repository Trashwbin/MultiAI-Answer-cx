{
  "manifest_version": 3,
  "name": "AI Chat Helper",
  "version": "1.0",
  "permissions": [
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "file://*",
    "http://localhost/*",
    "https://chat.deepseek.com/*",
    "https://tongyi.aliyun.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://kimi.moonshot.cn/*"
      ],
      "js": [
        "kimi-content.js"
      ]
    },
    {
      "matches": [
        "https://chat.deepseek.com/*"
      ],
      "js": [
        "deepseek-content.js"
      ]
    },
    {
      "matches": [
        "https://tongyi.aliyun.com/*"
      ],
      "js": [
        "tongyi-content.js"
      ]
    },
    {
      "matches": [
        "file://*",
        "http://localhost/*"
      ],
      "js": [
        "question-content.js"
      ]
    }
  ]
}