{
  "manifest_version": 3,
  "name": "AI投票做题",
  "description": "一个智能的自动答题助手，支持多个 AI 模型，可以帮助您更高效地完成在线答题。",
  "version": "1.0.1",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "author": "Trashwbin",
  "permissions": [
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "https://*.chaoxing.com/*",
    "https://chat.deepseek.com/*",
    "https://kimi.moonshot.cn/*",
    "https://tongyi.aliyun.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.chaoxing.com/*/work*",
        "https://*.chaoxing.com/*/mooc2/work*",
        "https://*.chaoxing.com/*/exam*",
        "https://*.chaoxing.com/*/mooc2/exam*",
        "https://*.chaoxing.com/*/test*",
        "https://*.chaoxing.com/*/mooc2/test*",
        "https://*.chaoxing.com/mycourse/studentstudy*"
      ],
      "js": [
        "config.js",
        "questionExtractor.js",
        "aiConfigModal.js",
        "previewModal.js",
        "answerHandler.js",
        "main.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://kimi.moonshot.cn/*"
      ],
      "js": [
        "kimi-content.js"
      ]
    },
    {
      "matches": [
        "https://chat.deepseek.com/*"
      ],
      "js": [
        "deepseek-content.js"
      ]
    },
    {
      "matches": [
        "https://tongyi.aliyun.com/*"
      ],
      "js": [
        "tongyi-content.js"
      ]
    }
  ]
}